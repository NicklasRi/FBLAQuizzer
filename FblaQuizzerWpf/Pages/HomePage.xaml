<Page x:Class="FblaQuizzerWpf.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FblaQuizzerWpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <Button x:Name="CreateButton" Content="Take Quiz" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Margin="20" Click="CreateButton_Click"/>
            <Button Grid.Row="1" x:Name="ViewButton" Content="View Quizzes" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Click="ViewButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
