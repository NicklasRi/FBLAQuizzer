<Page x:Class="FblaQuizzerWpf.Pages.QuestionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FblaQuizzerWpf.Pages"
      xmlns:converters="clr-namespace:FblaQuizzerWpf.Converters"
      xmlns:controls="clr-namespace:FblaQuizzerWpf.Controls"
      xmlns:business="clr-namespace:FblaQuizzerBusiness.Models;assembly=FblaQuizzerBusiness"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuestionPage">

    <Page.Resources>
        <converters:InvertBooleanConverter  x:Key="boolConvert"/>
        <converters:BooleanToVisibleConverter x:Key="boolToVisibleConvert"/>
        <converters:InvertBoolToVisibleConverter x:Key="invertBoolToVisibleConvert"/>
        <converters:QuestionTypeToVisibleConverter x:Key="questionTypeToVisibleConvert"/>
        <converters:QuestionTypeToEnabledConverter x:Key="questionTypeToEnabledConvert"/>
    </Page.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="NumberLabel" FontSize="20" FontWeight="Bold"></Label>
        <Label x:Name="TopicLabel" Grid.Row="1" FontSize="16"></Label>
        <Label x:Name= "TextLabel" Grid.Row="2"></Label>
        <controls:TrueOrFalseQuestionControl Grid.Row="3" Answer="{Binding Question.Answer}" IsEnabled="{Binding Question.QuestionType, Converter={StaticResource questionTypeToEnabledConvert}, ConverterParameter={x:Static business:QuestionType.TrueFalse}}" Visibility="{Binding Question.QuestionType, Converter={StaticResource questionTypeToVisibleConvert}, ConverterParameter={x:Static business:QuestionType.TrueFalse}}"></controls:TrueOrFalseQuestionControl>
        <controls:MultipleChoiceQuestionControl Grid.Row="3" Answer="{Binding Question.Answer}" Options="{Binding MultipleChoiceOptions}" IsEnabled="{Binding Question.QuestionType, Converter={StaticResource questionTypeToEnabledConvert}, ConverterParameter={x:Static business:QuestionType.MultipleChoice}}" Visibility="{Binding Question.QuestionType, Converter={StaticResource questionTypeToVisibleConvert}, ConverterParameter={x:Static business:QuestionType.MultipleChoice}}"></controls:MultipleChoiceQuestionControl>
        <controls:TextQuestionControl Grid.Row="3" Answer="{Binding Question.Answer}" IsEnabled="{Binding Question.QuestionType, Converter={StaticResource questionTypeToEnabledConvert}, ConverterParameter={x:Static business:QuestionType.Text}}" Visibility="{Binding Question.QuestionType, Converter={StaticResource questionTypeToVisibleConvert}, ConverterParameter={x:Static business:QuestionType.Text}}"></controls:TextQuestionControl>
        <controls:MatchingQuestionControl Grid.Row="3" MatchingAnswers="{Binding MatchingAnswers}" IsEnabled="{Binding Question.QuestionType, Converter={StaticResource questionTypeToEnabledConvert}, ConverterParameter={x:Static business:QuestionType.Matching}}" Visibility="{Binding Question.QuestionType, Converter={StaticResource questionTypeToVisibleConvert}, ConverterParameter={x:Static business:QuestionType.Matching}}"></controls:MatchingQuestionControl>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="PreviousButton" Content="Previous" Width="100" HorizontalAlignment="Left" Margin="10" Click="PreviousButton_Click" IsEnabled="{Binding IsFirstQuestion, Converter={StaticResource boolConvert}}"></Button>
            <Button x:Name="NextButton" Content="Next" Width="100" HorizontalAlignment="Right" Grid.Column="1" Margin="10" Click="NextButton_Click" Visibility="{Binding IsLastQuestion, Converter={StaticResource invertBoolToVisibleConvert}}"></Button>
            <Button x:Name="FinishButton" Content="Finish" Width="100" HorizontalAlignment="Right" Grid.Column="1" Margin="10" Visibility="{Binding IsLastQuestion, Converter={StaticResource boolToVisibleConvert}}"></Button>
        </Grid>
    </Grid>
</Page>
