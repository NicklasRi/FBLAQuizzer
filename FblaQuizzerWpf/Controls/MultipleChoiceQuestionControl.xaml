<UserControl x:Class="FblaQuizzerWpf.Controls.MultipleChoiceQuestionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FblaQuizzerWpf.Controls"
             xmlns:converters="clr-namespace:FblaQuizzerWpf.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="root">

    <Control.Resources>
        <converters:MultipleChoiceOptionConverter x:Key="optionConverter"/>
    </Control.Resources>
    
    <Grid>
        <ItemsControl ItemsSource="{Binding Options, ElementName=root}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <RadioButton Content="{Binding ., Converter={StaticResource optionConverter}}"></RadioButton>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate> 
            
        </ItemsControl>     
    </Grid>
</UserControl>
