<local:QuestionControl x:Class="FblaQuizzerWpf.Controls.TextQuestionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FblaQuizzerWpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="root">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Margin="4" x:Name="AnswerText" Text="{Binding QuizQuestion.Answer, ElementName=root}" Width="200" MaxLength="50" HorizontalAlignment="Left" LostFocus="AnswerText_LostFocus"/>
    </Grid>
</local:QuestionControl>
