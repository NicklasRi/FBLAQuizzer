<local:QuestionControl x:Class="FblaQuizzerWpf.Controls.TrueOrFalseQuestionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FblaQuizzerWpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="root">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
            <RadioButton x:Name="TrueButton" Content="True" Margin="8" GroupName="TrueFalseGroup"/>
            <RadioButton x:Name="FalseButton"  Content="False" Margin="8" GroupName="TrueFalseGroup"></RadioButton>
        </StackPanel>
    </Grid>
</local:QuestionControl>
